<h1>Eat This Burger?</h1>

<h2>Uneaten</h2>

  <ul>
	{{#each burgers}}
		{{#unless this.devoured}}
			<li>

				<form action="/{{this.id}}?_method=PUT" method="POST">
					<input type="hidden" name="ate" value="true">
					<button type="submit">{{this.burger_name}}</button>
				</form>

			</li>
		{{/unless}}
	{{/each}}
  </ul>

<h2>Eaten</h2>
  <ul>
  	{{#each burgers}}
  		{{#if this.devoured}}
  			<li>

  				<form action="/{{this.id}}?_method=PUT" method="POST">
  					<input type="hidden" name="ate" value="false">
  					<button type="submit">{{this.burger_name}}</button>
  				</form>

  			</li>
  		{{/if}}
  	{{/each}}
  </ul>
  	
  		

<h2>Add Burger</h2>

<form class="create-update-form" action="/" method="POST">
	<div class="form-group">
		<label for="burger">Burger name:</label>
		<input type="text" id="burger" name="name">
	</div>

	<div class="form-group">
		<label for="devoured">Eaten?</label><br>
		<input type="radio" name="ate" value="1"> Ate it<br>
		<input type="radio" name="ate" value="0"> Uneaten
	</div>

	<button type="submit">Add Burger</button>

</form>